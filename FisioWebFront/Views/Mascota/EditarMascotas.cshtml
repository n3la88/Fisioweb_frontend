@model FisioWebFront.Entities.MascotaRazaEspecieOBJ
@{
    ViewBag.Title = "EditarMascotas";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<html class="no-js">

<body>

    <section class="page_breadcrumbs ls ms columns_margin_0">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 ">
                    <ol class="breadcrumb">

                        <li>
                            <a href="index.html">
                                Inicio
                            </a>
                        </li>
                        <li>
                            <a href="#">Mi Cuenta</a>
                        </li>
                                  @if (Context.Session.GetString("rol") == "1" || Context.Session.GetString("rol") == "2" )
                                {
                            <li class="active">Lista de Mascotas</li>
                        }
                        else
                        {
                            <li class="active">Mis Mascotas</li>
                    

                        }

                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="ls section_padding_top_65 section_padding_bottom_100">
        <div class="container">
            @using (Html.BeginForm("EditarMascotas", "Mascota", FormMethod.Post))
            {
                <div class="row">

                    <div class="col-md-8 to_animate" data-animation="scaleAppear">

                        <div class="col-sm-12 to_animate" data-animation="slideRight" data-delay="150">
                            <h3>Editar Mascota</h3>
                        </div>

                        <hr class="divider_1_270 divider_30 left">
                        <h3 class="section_header small bottommargin_30">
                        </h3>

                        @Html.HiddenFor(model => model.id_mascota)
                        @Html.HiddenFor(model => model.id_cliente)

                        <div class="col-sm-6">
                            <p>
                                Nombre
                            </p>
                            <div class="contact-form-email">
                                @Html.TextBoxFor(model => model.nombre_mascota, new{
                                @class = "form-control", @required = "required",
                                @size="30", @value="", @name="nombre_mascota",
                            @id="nombre_mascota",    @pattern=@"^[a-zA-Z0-9\S]+$"

                            })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <p>
                                Raza
                            </p>
                            <div class="contact-form-email">


                                @Html.DropDownListFor(model => model.id_raza, ViewBag.ComboIdRaza as List<SelectListItem>)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <p>
                                Edad Aproximada
                            </p>
                            <div class="contact-form-email">

                                @Html.TextBoxFor(model => model.edad_mascota, new{
                                @class = "form-control", @required = "required",
                            @size="30", @value="", @name="edad_mascota", @pattern=@"^\d+(?!\d*e)\d*$",
                                @id="edad_mascota"

                            })


                            </div>
                        </div>

                        <div class="col-sm-12">
                            <p>
                                Detalles Adicionales
                            </p>
                            <div class="contact-form-email">

                                @Html.TextAreaFor(model => model.detalles_mascota, new{
                                @class = "form-control", @required = "required",
                                @size="30", @value="", @name="detalles_mascota",
                                @id="detalles_mascota",
                                @style="padding: 0px; margin: 0px;text-align: left;",
                                @pattern=@"^[a-zA-Z0-9\S]+$"
                            })

                            </div>
                        </div>

                        <div class="col-sm-12">

                            <input class="theme_button color2" type="submit" value="Actualizar Mascota">

                        </div>


                        @if (Context.Session.GetString("rol") == "1" || Context.Session.GetString("rol") == "2" )
                                {
                            <div class="col-sm-12">
                                <input type="button" value="Volver Atras" class="theme_button color1" onclick="location.href='@Url.Action("VerListaClientes", "Admin")'">

                            </div>

                        }

                        else{

                        <div class="col-sm-12">
                            <input type="button" value="Volver Atras" class="theme_button color1" onclick="location.href='@Url.Action("VerMascotas", "Mascota")'">


                        </div>
                        }
                    </div>

                </div>
            }
        </div>

    </section>

    <script src="~/fluffypaw/js/compressed.js"></script>
    <script src="~/fluffypaw/js/main.js"></script>
    <script src="~/fluffypaw/js/switcher.js"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>
 

</body>


