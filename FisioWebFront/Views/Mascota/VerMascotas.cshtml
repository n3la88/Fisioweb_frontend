@model IEnumerable<FisioWebFront.Entities.MascotaRazaEspecieOBJ>
@{
    ViewBag.Title = "VerMascotas";
    Layout = "~/Views/Shared/_Layout.cshtml";
  
}
@section scriptsProyecto{

    @* Scrips para que el table este en Espanol *@

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>


    <script type="text/javascript">

        $(document).ready(function () {
            $('#ListaMascotas').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                }
            });
        });

    </script>
}

<html>

<body>

        <section class="page_breadcrumbs ls ms columns_margin_0">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 ">
                        <ol class="breadcrumb">

                            <li>
                                <a href="index.html">
                                    Inicio
                                </a>
                            </li>
                            <li>
                                <a href="#">Mi Cuenta</a>
                            </li>

                            <li class="active">Mis Mascotas</li>

                        </ol>
                    </div>
                </div>
            </div>
        </section>
    <section class="ls section_padding_top_65 section_padding_bottom_100">
        <div class="container">
      
                
                <h2>Mis Mascotas</h2>
                <div class="row">
                    <div class="col-sm-10">
                    <table id="ListaMascotas" class="display" style="text-align:center">
                    <thead>
                        <tr>
                            <th>Nombre de la Mascota</th>
                            <th>Edad</th>
                            <th>Especie</th>
                            <th>Raza</th>
                            <th>Ver Mas</th>
                            <th>Opciones</th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre_mascota)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.edad_mascota)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcion_especie)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcion_raza)
                                </td>

                                <td>
                                    <input type="button" value="Detalles"  class="theme_button color1" onclick="location.href='@Url.Action("VerMascota", "Mascota", new { q = item.id_mascota })'">
                                </td>

                                <td>
                                     <input type="button" value="Editar" class="theme_button color2" onclick="location.href='@Url.Action("EditarMascotas", "Mascota", new { q = item.id_mascota })'">
                                </td>
                            </tr>


                        }
                    </tbody>
                </table>

                    </div>
                </div>
          
        </div>

    </section>


    <script src="~/fluffypaw/js/compressed.js"></script>
    <script src="~/fluffypaw/js/main.js"></script>
    <script src="~/fluffypaw/js/switcher.js"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>

      

</body>


